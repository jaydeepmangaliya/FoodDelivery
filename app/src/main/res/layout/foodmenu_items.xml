<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView

        android:layout_width="323sp"
        android:layout_height="87dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="3dp"
        android:elevation="10dp"
        app:cardCornerRadius="22dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/grey">

            <ImageView
                android:id="@+id/menuimage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="8dp"
                android:scaleType="centerCrop"

                android:src="@drawable/spashlogo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Menumoneytex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="$100"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.655"
                app:layout_constraintStart_toEndOf="@+id/menufoodname"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/menuaddtocarttxt"
                android:layout_width="83dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/addto_cart"
                android:gravity="center"
                android:text="Add To Cart"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/Menumoneytex"
                app:layout_constraintStart_toStartOf="@+id/Menumoneytex"
                app:layout_constraintTop_toBottomOf="@+id/Menumoneytex" />

            <TextView
                android:id="@+id/menufoodname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Food Name"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/menuimage"
                app:layout_constraintStart_toEndOf="@+id/menuimage"
                app:layout_constraintTop_toTopOf="@+id/menuimage" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>